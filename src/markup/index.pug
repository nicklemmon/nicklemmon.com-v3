extends layouts/default.pug

block content

  section.sect.sect--alt.sect--angle.hero
    .sect__container.u-mgTop--xl
      h1.tagline.tagline--h1.hero__tagline.u-mgTop--lg Front-end Web Design
      .hero__taglineContainer
        h2.tagline.tagline--h2.hero__tagline in Durham, NC
      a.button.button--primary(tabindex="0") See My Stuff!

  //- Portfolio section
  section.sect
    .sect__container.u-pdBottom--xl
      .gr
        .gr__col--1-2.u-mgBottom--lg
          h3 My Work
          hr
          p A selection of a few designs and code snippets.

      //- grid of portfolio items
      include partials/mixins/portfolioCard.pug

      .gr.gr--xs
        .gr__col--1-4
          +portfolioCard('thumb-01', 'Alt Stuff!')
        .gr__col--1-4
          +portfolioCard('thumb-02', 'Alt Stuff!')
        .gr__col--1-4
          +portfolioCard('thumb-03', 'Alt Stuff!')
        .gr__col--1-4
          +portfolioCard('thumb-04', 'Alt Stuff!')

      .gr.gr--xs
        .gr__col--1-4
          +portfolioCard('thumb-05', 'Alt Stuff!')
        .gr__col--1-4
          +portfolioCard('thumb-06', 'Alt Stuff!')
        .gr__col--1-4
          +portfolioCard('thumb-07', 'Alt Stuff!')
        .gr__col--1-4
          +portfolioCard('thumb-08', 'Alt Stuff!')

  //- 'My Skillset' section
  section.sect.sect--alt.sect--angle.u-pdTop--xl
    .sect__container
      .gr
        .gr__col--1-2.u-mgBottom--lg
          h3 My Skillset
          hr
          p I'm a generalist with visual design and front-end development skills.

      .gr.gr--xs
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/html5.pug
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/sass.pug
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/js.pug
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/adobe-cc.pug

      .gr.gr--xs.u-display--flex.u-jstContent--center
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/sketch.pug
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/terminal.pug
        .gr__col--1-4
          a.card.card--flexCenter(tabindex="0")
            include partials/svg/handlebars.pug

  //- 'About Me' sections
  section.sect
    .sect__container
      .gr.gr--xs
        .gr__col--1-3
          picture.avatar
            img.avatar__img(src="/images/me.webp", alt="Me!")
        .gr__col--1-3
          h3 About Me
          hr
          p Iâ€™m currently working for the BB&amp;T Digital Channel, doing visual design and front-end web development.
        .gr__col--1-3
          p.paragraph--paddingCol To see more work, find me elsewhere on the interwebs. You can always send me a message as well.

      .gr.u-mgTop--xl
        .card.card--squared.card--border.u-pd--xl
          h4 Send a message
          hr

          form.form
            label.form__label.u-txtHide(for="email-address") Email address

            .gr
              .gr__col--3-4
                input.form__input.u-displayInlineBlock(id="email-address", name="email-address", type="email", placeholder="Get in touch")
              .gr__col--1-4
                button.form__submit
                  span.u-txtHide Send

  .modal__overlay.is-hidden
